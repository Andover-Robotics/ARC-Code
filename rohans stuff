#include "joystickdriver.c"


void checkdriving()
	{
		getJoystickSettings(joystick);
			int slide_speed = 127;
			if(joystick.joy1_y1 > 5 || joystick.joy1_y1 < -5)
			{
				motor[left_drive] = 100;
			}
			else
			{
				motor[left_drive] = 0;
			}
			if(joystick.joy1_y2 > 5 || joystick.joy1_y2 <-5)
			{
				motor[right_drive] = 100;
			}
			else
			{
				motor[right_drive] = 0;
			}
}
void slidemech(true)
	{
		getJoystickSettings(joystick);
		if(joy1Btn(7) == 1)
		{
			motor[slide0] = 50;
		}
		else
		{
			motor[slide0] = 0;
		}
		if(joy1Btn(5) == 1)
		{
			motor[slide0] = -50;
		}
		else
		{
			motor[slide0] = 0;
		}

	}
void chainmech()
	{
		getJoystickSettings(joystick);
		if(joy1Btn(8) == 1)
		{
			motor[chain0] = 50;
		}
		else
		{
			motor[chain0] = 0;
		}
		if(joy1Btn(6) == 1)
		{
			motor[chain0] = -50;
		}
		else
		{
			motor[chain0] = 0;
		}
	}
void turninplace()
{
	getJoystickSettings(joystick);
	if(joystick.joy1_x1 > 5 || joystick.joy1_x1 < -5)
	{
		motor[left_drive] = -50;
		motor[right_drive] = 50;
	}
	else
	{
		motor[left_drive] = 0;
		motor[right_drive] = 0;
	}
	if(joystick.joy1_x2 > 5 || joystick.joy1_x2 < -5)
	{
		motor[left_drive] = 50;
		motor[right_drive] = -50;
	}
	else
	{
		motor[left_drive] = 0;
		motor[right_drive] = 0;
	}
}

task main()
{
	while(true)
	{		checkdriving();
			slidemech();
			chainmech();
			turninplace();
	}
}

