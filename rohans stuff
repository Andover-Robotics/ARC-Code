#pragma config(Hubs,  S1, HTMotor,  HTMotor,  none,     none)
#pragma config(Sensor, S1,     ,               sensorI2CMuxController)
#pragma config(Motor,  mtr_S1_C1_1,     left_drive,    tmotorTetrix, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C1_2,     right_drive,   tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C2_1,     slide0,        tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C2_2,     chain0,        tmotorTetrix, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

int speed = 127;
#include "JoystickDriver.c"

void slideup()
{
	motor[slide0]=speed; 
	
}

void checkDriving()
{
	getJoystickSettings(joystick);
		if (joystick.joy1_y1 >5 || joystick.joy1_y1 <-5 )
		{
			motor[left_drive]= joystick.joy1_y1; 
		}
		else
		{
			motor[left_drive] = 0;
		}
		
		if (joystick.joy1_y2 >5 || joystick.joy1_y2<-5 )
		{
			motor[right_drive]= joystick.joy1_y2;
		}
		else
		{
			motor[right_drive] = 0;
		}
}

task main()
{
	while (1==1)
	{
		checkDriving();
	}
/*	while (1==1) 
	{
		if (joy1Btn1 1 == 1)
		{
			motor[left_drive]= 100;
		}
	else
	{
		motor[left_drive]= 0;
}*/
}
